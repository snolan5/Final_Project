<div class= "row">
<form action="/api/forms/:forms" method="post" class="form-inline w-100">
    <select name="selectForm" id="selectForm" class="form-control mb-4 w-80">
      <option value="0" selected="selected">-Select a search query-</option>
      <option value="1" name="form_name1">Title</option>
      <option value="2" name="form_name2">Code</option>
      <option value="3" name="form_name3">Instructor</option>
      <option value="4" name="form_name4">Day</option>
      <option value="5" name="form_name5">Seats</option>
      <option value="6" name="form_name6">Structure</option>
      <option value="7" name="form_name7">Instructor & Seats</option>
      <option value="8" name="form_name8">Instructor & Day</option>
    </select>
    <input type='submit' class="btn btn-secondary mb-4" name ='register'>
</form>
</div>
{{#if myObj.forms.[1]}}
<form action="/api/courses/title" method="post" class="mb-4">
  <div class="form-group">
    <label for="Title">Title</label>
    <input type="text" name="title" class="form-control">
  </div>
  <input type="submit" value="Find Course" class="btn btn-primary btn-block">
</form>
{{/if}}
