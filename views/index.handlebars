<h4>Results</h4>
<ul class="list-group">
  {{#each results}}
  <li class="list-group-item">{{this.code}}: {{this.title}}| {{this.instructor}}| {{this.day}}| Seats:{{this.seats}}| Structure:{{this.Type}}</li>
  {{/each}}
  <li class="list-group-item">{{errorMessage}}</li>
</ul>
